{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        // I prefer double quotes because I commonly use 2-4 different programing languages
        // some of them distinguishes single quoted string (which is single char/rune) from double quotes (which are string)
        // In javascript double quotes does not have templating (like for example php) so it's safe to replace it later
        // Replacement could be done by simple regexp or by eslint --fix
        "quotes": [1, "double"],
        // shows error when using property declaration in constructor and constructor body is empty
        "no-useless-constructor": "off",
        // let typescipt hadle which variable is unused. eslint have troubles with interfaces
        "no-unused-vars": "off",
        "no-undef": "off"
    }
}